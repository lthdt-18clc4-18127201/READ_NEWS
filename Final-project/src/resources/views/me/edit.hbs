<div class="mt-4">
    <h3>Edit profile</h3>

    <form class="mt-4" action="/me/update" method="post">
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" value="{{user.name}}" id="name" name="name"required>
        </div>
        <div class="form-group">
            <label for="email">Email</label>
            <input class="form-control" value="{{user.email}}" id="email" name="email"required>
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input type="text" class="form-control" value="{{user.password}}" id="password" name="password"required>
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</div>